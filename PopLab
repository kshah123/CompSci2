     */
    public static void main(String[] args) {
        double initial;
        double final; 
        double growthr;
        double d;
        Scanner s = new Scanner(System.in);
        System.out.println("What is the initial population");
        initial = s.nextDouble();
        System.out.println("What is the final population");
        final = s.nextDouble();
        
        growthr = gRate(final, initial);
        
        System.out.println("The growth rate is " + growthr + " percent");
    }
    public static double gRate(double f, double i){
        growthr = (f - i)/i * 100;
        retrun growthr;
    }
    
