package lab2;
import java.util.Scanner;
/**
 *
 * @author Kush Shah
 */
public class Lab2 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner in = new Scanner(System.in);
        
        System.out.println("You have a right triangle");
        
        System.out.println("Type in the value for one of the legs for your right triangle");
        double a = in.nextDouble();
        
        System.out.println("Type in the value for the other leg of your right triangle");
        double b = in.nextDouble();
        
        double a2 = Math.pow(a, 2);
        double b2 = Math.pow(b, 2);
        
        double c2 = a2 + b2;
        
        double c = Math.sqrt(c2);
        
        System.out.println("The length of your third side is: " + c);

    }
    
}
